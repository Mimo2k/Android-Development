<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="4dp"
    tools:context=".MainActivity">

   <soup.neumorphism.NeumorphCardView
       android:layout_width="match_parent"
       android:layout_height="250dp"
       style="@style/Widget.Neumorph.CardView"
       app:neumorph_shadowColorDark="@color/dark"
       app:neumorph_shadowColorLight="@color/Light"
       app:neumorph_shadowElevation="3.5dp"

       >
       <soup.neumorphism.NeumorphTextView
           android:layout_width="match_parent"
           android:layout_height="120dp"
           android:textSize="24sp"
           android:text="2+2+4+5"
           android:gravity="center|end"
           android:layout_gravity="top"
           android:layout_margin="6dp"
           style="@style/Widget.Neumorph.TextView"
           app:neumorph_shadowColorDark="@color/dark"
           app:neumorph_shadowColorLight="@color/Light"
           app:neumorph_shadowElevation="2.5dp"

           />

       <soup.neumorphism.NeumorphTextView
           android:layout_width="match_parent"
           android:layout_height="120dp"
           android:textSize="35sp"
           android:text="13"
           android:gravity="center|end"
           android:layout_margin="6dp"
           android:layout_gravity="bottom"
           style="@style/Widget.Neumorph.TextView"
           app:neumorph_shadowColorDark="@color/dark"
           app:neumorph_shadowColorLight="@color/Light"
           app:neumorph_shadowElevation="2.5dp"

           />
   </soup.neumorphism.NeumorphCardView>


</LinearLayout>